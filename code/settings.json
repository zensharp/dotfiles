{
    "diffEditor.codeLens": true,
    "editor.autoClosingBrackets": "never",
    "editor.autoClosingQuotes": "never",
    "editor.cursorBlinking": "phase",
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.fontFamily": "Iosevka Custom Semibold, Iosevka Custom, Iosevka, Cascadia Code PL, Consolas, 'Courier New', monospace",
    "editor.fontLigatures": true,
    "editor.insertSpaces": false,
    "editor.renderWhitespace": "all",
    "editor.smoothScrolling": true,
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "explorer.decorations.badges": false,
    "explorer.expandSingleFolderWorkspaces": false,
    "extensions.ignoreRecommendations": true,
    "files.autoSave": "off",
    "files.hotExit": "off",
    "problems.decorations.enabled": false,
    "search.useGlobalIgnoreFiles": true,
    "security.workspace.trust.enabled": false,
    "security.workspace.trust.untrustedFiles": "open",
    "terminal.integrated.cursorStyle": "line",
    "terminal.integrated.defaultProfile.linux": "zsh",
    "terminal.integrated.commandsToSkipShell": [
        "-workbench.action.quickOpenView"
    ],
    "window.restoreWindows": "none",
    "workbench.colorCustomizations": {
        "terminal.ansiBrightMagenta": "#FF8000",
        "terminal.ansiMagenta": "#FF8000",
        "editorSuggestWidget.background": "#141414e0",
        "editorWidget.background": "#141414e0",
        "editorHoverWidget.background": "#141414e0",
        "[Nord]": {
            "editor.background": "#272C36",
            "editorGutter.background": "#272C36",
            "editor.lineHighlightBackground": "#3b425240",
            "editor.lineHighlightBorder": "#3b425280",
            "editor.selectionBackground": "#5e81ac80",
            "editor.selectionHighlightBackground": "#8fbcbb18",
            "activityBar.background": "#3b4252",
            "activityBar.activeBackground": "#4c566a",
            "titleBar.activeBackground": "#3b4252",
            "titleBar.inactiveBackground": "#3b4252"
        }
    },
    "workbench.editor.closeOnFileDelete": true,
    "workbench.editor.decorations.badges": false,
    "workbench.editor.decorations.colors": false,
    "workbench.editor.openPositioning": "last",
    "workbench.enableExperiments": false,
    "workbench.list.smoothScrolling": true,
    "workbench.startupEditor": "newUntitledFile",
    "editor.tabSize": 3,
    "editor.fontSize": 16,
    "editor.wordWrap": "on",
    "editor.minimap.renderCharacters": false,
    "editor.wordBasedSuggestions": "off",
    "git.openRepositoryInParentFolders": "never",
    "editor.unicodeHighlight.invisibleCharacters": false,
    "dotnet.codeLens.enableReferencesCodeLens": false,
    "terminal.integrated.fontSize": 14,
    "terminal.integrated.fontFamily": "Iosevka Custom Semibold, Iosevka Custom, Iosevka, Cascadia Code PL, Consolas, 'Courier New', monospace",
    "terminal.integrated.profiles.windows": {
        "PowerShell": {
            "source": "PowerShell",
            "icon": "terminal-powershell"
        },
        "Command Prompt": {
            "path": [
                "${env:windir}\\Sysnative\\cmd.exe",
                "${env:windir}\\System32\\cmd.exe"
            ],
            "args": [],
            "icon": "terminal-cmd"
        },
        "Git Bash": {
            "source": "Git Bash"
        },
        "Ubuntu (WSL)": {
            "path": "C:\\WINDOWS\\System32\\wsl.exe",
            "args": [
                "-d",
                "Ubuntu"
            ]
        }
    },
    "terminal.integrated.defaultProfile.windows": "Ubuntu (WSL)",
    "terminal.integrated.cursorBlinking": true,
    "csharp.showOmnisharpLogOnError": false,
    "security.allowedUNCHosts": [
        "wsl.localhost"
    ],
    "workbench.editor.empty.hint": "hidden",
    "remote.SSH.connectTimeout": 1800,
    "dotnet.server.useOmnisharp": true,
    "update.showReleaseNotes": false,
    "workbench.layoutControl.enabled": false,
    "editor.trimAutoWhitespace": false,
    "files.trimTrailingWhitespaceInRegexAndStrings": false,
    "workbench.tree.indent": 12,
    "workbench.tree.renderIndentGuides": "always",
    "window.commandCenter": false,
    "html.format.indentInnerHtml": true,
    "[csharp]": {
        "editor.defaultFormatter": "ms-dotnettools.csharp"
    },
    "vstuc.refreshOnSave": true,
    "editor.formatOnType": true,
    "editor.tokenColorCustomizations": {
        "[*Light*]": {
            "textMateRules": [
                {
                    "scope": "ref.matchtext",
                    "settings": {
                        "foreground": "#000"
                    }
                }
            ]
        },
        "[*Dark*]": {
            "textMateRules": [
                {
                    "scope": "ref.matchtext",
                    "settings": {
                        "foreground": "#fff"
                    }
                }
            ]
        }
    },
    "workbench.colorTheme": "Visual Studio 2019 Dark",
    "editor.autoIndent": "advanced",
    "omnisharp.useEditorFormattingSettings": false,
    "editor.tabCompletion": "on"
}
