[init]
	defaultBranch = master
[core]
	whitespace = cr-at-eol
	editor = micro
	compression = 0
	hooksPath = ~/.dotfiles/git/hooks
	excludesFile = ~/.dotfiles/git/gitignore
	filemode = false
[fetch]
	prune = true
[pull]
	ff = only
[push]
	default = upstream
	followTags = true
[commit]
	template = ~/.dotfiles/git/gitmessage
[merge]
	ff = false
[diff]
    context = 1
	colormoved = dimmed-zebra
	colormovedws = allow-indentation-change
[http]
	postBuffer = 524288000
[color "branch"]
	current = green bold
	local = white bold
    remote = black bold
[color "status"]
	header = white bold
	added = green bold
	updated = cyan bold #conflicts resolved
	changed = yellow bold
	untracked = black bold
	branch = green bold
	nobranch = green bold
	unmerged = red bold
[color "diff"]
	commit = yellow bold
[url "git@gitlab.com"]
	insteadOf = gitlab
	pushInsteadOf = gitlab
[url "git@github.com"]
	insteadOf = github
	pushInsteadOf = github
[url "git@bitbucket.com"]
	insteadOf = bitbucket
	pushInsteadOf = bitbucket
[include]
	path = ~/.dotfiles/git/aliases.gitconfig
	path = ~/.dotfiles/git/delta.gitconfig
[includeIf "gitdir:**/gitlab/**"]
	path = ~/.dotfiles/git/gitlab/gitconfig
[includeIf "gitdir:**/github/**"]
	path = ~/.dotfiles/git/github/gitconfig
