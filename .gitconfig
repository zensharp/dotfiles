[init]
	defaultBranch = master
[core]
	editor = micro
	compression = 0
[fetch]
	prune = true
[pull]
	rebase = true
[commit]
	template = ~/.dotfiles/git/.gitmessage
[merge]
	ff = true
[diff]
	colormoved = dimmed-zebra
	colormovedws = allow-indentation-change
[http]
	postBuffer = 524288000
[color "branch"]
    current = white
    local = white
    remote = black
[color "status"]
	added = green
	changed = yellow
	untracked = red
[alias]
	pl = pull
	ps = push
	ft = fetch
	br = branch
	mg = merge
	ff = merge --ff-only
	cl = clone
	co = checkout
	cob = checkout -b
	rb = rebase
	st = status
	s = status --short
	aa = add --all
	ci = commit
	cm = commit --message
	ca = commit --all
	cam = commit --all --message
	adog = log --all --decorate --oneline --graph
	feat = feature
	pb = publish
	pd = produce
	bw = browse
	lz = lazy
[url "git@gitlab.com"]
	insteadOf = gl
	pushInsteadOf = gl
[url "git@github.com"]
	insteadOf = gh
	pushInsteadOf = gh
[url "git@bitbucket.com"]
	insteadOf = bb
	pushInsteadOf = bb
[includeIf "gitdir:**/gitlab/**"]
	path = ~/.dotfiles/git/gitlab.gitconfig
[includeIf "gitdir:**/github/**"]
	path = ~/.dotfiles/git/github.gitconfig
