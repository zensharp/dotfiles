[core]
	editor = micro
	compression = 0
[fetch]
	prune = true
[pull]
	rebase = true
[commit]
	template = ~/.dotfiles/git/.gitmessage
[merge]
	ff = no
[diff]
	colormoved = dimmed-zebra
	colormovedws = allow-indentation-change
[http]
	postBuffer = 524288000
[alias]
	pl = pull
	ps = push
	ft = fetch
	cl = clone
	co = checkout
	cob = checkout -b
	rb = rebase
	st = status
	s = status --short
	aa = add --all
	ci = commit
	cm = commit --message
	ca = commit --all
	cam = commit --all --message
	adog = log --all --decorate --oneline --graph
	pb = publish
	pbc = publish --push-option merge_request.create
	pbca = publish --push-option merge_request.create --push-option merge_request.merge_when_pipeline_succeeds
	pd = produce
	bw = browse
	lz = lazy
[url "git@gitlab.com"]
	insteadOf = gl
[url "git@github.com"]
	insteadOf = gh
[url "git@bitbucket.com"]
	insteadOf = bb
[includeIf "gitdir:**/gitlab/**"]
	path = ~/.dotfiles/git/gitlab.gitconfig
[includeIf "gitdir:**/github/**"]
	path = ~/.dotfiles/git/github.gitconfig
