. ~/.dotfiles/shell/functions
. ~/.dotfiles/shell/aliases

# Environment
export DIRENV_LOG_FORMAT=

# ls
alias ls='${LS:-ls} --color=always --group-directories-first -x --time-style iso'
alias grep='grep --color=always'
alias fgrep='fgrep --color=always'
alias egrep='egrep --color=always'

# Extras
[[ "${LESS}" != *--mouse* ]] && export LESS="${LESS} --mouse"

# OneDrive defaults
export TOPATH="$HOME/.dotfiles/to:$ONEDRIVE/dotfiles/to"
export TODO="$ONEDRIVE/todo.md"
