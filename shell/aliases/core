# Wrappers
function open { eval "$OPEN ${1:-$PWD}"; }
alias cb='$CLIPBOARD'
alias serve=live-server

# Alterations
alias fd='fd -I'
alias -g -- '--skip-ci=-o ci.variable="CI_SKIP=1"'
alias -g -- '--deploy=-o ci.variable="CI_ENVIRONMENT_DEPLOY_AUTO=1"'

# Utilities
alias cls="clear; printf '\033[3J'"
alias ssh-cat='cat ~/.ssh/id_rsa.pub'
alias cdroot='cd $(git root)'
alias whereami='cat /etc/hostname'

# Abbreviations of common commands
alias g=git
alias j=z
alias o=open
alias m=micro
alias u=unity
alias wn=wink
