# Wrappers
function open
{
	eval "$OPEN \"${1:-$PWD}\"";
}
alias cb='$CLIPBOARD'
alias serve=live-server
alias browse='$BROWSER'

# Alterations
alias fd='fd -I'
alias -g -- '--no-ci=-o ci.variable="CI_SKIP=1"'
alias -g -- '--deploy=-o ci.variable="CI_ENVIRONMENT_DEPLOY_AUTO=1"'

# Utilities
alias cls="clear; printf '\033[3J'"
alias ssh-cat='cat ~/.ssh/id_rsa.pub'
alias cdroot='cd $(git root)'
alias whereami='cat /etc/hostname'

alias -s git="git deposit"

# Abbreviations of common commands
alias b=browse
alias dc=docker-compose
alias dcud=docker-compose up -d
alias dcudf=docker-compose up -d --force-recreati
alias dcl=docker-compose logs -f
alias g=git
alias j=z
alias o=open
alias m=micro
alias u=unity
alias wn=wink
alias ts=tailscale
